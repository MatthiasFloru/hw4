<h1><%= @place["name"] %></h1>

<% if @current_user%>

    <p>
      <a href="/posts/new?place_id=<%= @place["id"] %>" class = "btn btn-success">New Post</a>
    </p>

  <h2>My Posts</h2>
    <div class="row">
      <% for post in @posts %>
        <div class="col-lg-4">
          <h3><%= post["title"] %></h3>
          <h4><%= post["posted_on"] %></h4>
          <p><%= post["description"] %></p>
        </div>
      <% end %>
    </div>

   

<% end %>


<p>
  <a href="/places" class = "btn btn-secondary">Back to All Places</a>
</p>